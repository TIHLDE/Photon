{
    "name": "@photon/api",
    "version": "0.0.0",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "bun --watch src/index.ts",
        "build": "bun build src/index.ts --outdir dist --target bun --sourcemap",
        "start": "bun dist/index.js",
        "test": "vitest run",
        "test:watch": "vitest",
        "coverage": "vitest run --coverage",
        "typecheck": "tsc --noEmit",
        "lint": "biome check .",
        "lint:fix": "biome check --write --unsafe .",
        "export-openapi": "SKIP_ENV_VALIDATION=1 bun scripts/export-openapi.ts"
    },
    "dependencies": {
        "@aws-sdk/client-s3": "^3.927.0",
        "@hono/mcp": "^0.1.4",
        "@hono/standard-validator": "^0.1.5",
        "@photon/auth": "workspace:*",
        "@photon/core": "workspace:*",
        "@photon/db": "workspace:*",
        "@photon/email": "workspace:*",
        "@scalar/hono-api-reference": "^0.9.16",
        "@socotra/modelcontextprotocol-sdk": "^1.18.0",
        "@vippsmobilepay/sdk": "^2.4.2",
        "drizzle-orm": "catalog:",
        "drizzle-seed": "catalog:",
        "hono": "^4.11.7",
        "hono-openapi": "^1.0.2",
        "node-cron": "^4.2.1",
        "pino": "^10.3.1",
        "react": "^19.2.4",
        "zod": "catalog:"
    },
    "devDependencies": {
        "@photon/tsconfig": "workspace:*",
        "@testcontainers/minio": "^11.8.0",
        "@testcontainers/postgresql": "^11.7.0",
        "@testcontainers/redis": "^11.7.0",
        "@types/bun": "catalog:",
        "@types/node": "catalog:",
        "@types/node-cron": "^3.0.11",
        "@vitest/coverage-v8": "^3.2.4",
        "pino-pretty": "^13.1.3",
        "testcontainers": "^11.7.0",
        "typescript": "catalog:",
        "vitest": "^3.2.4"
    }
}
