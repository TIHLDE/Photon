{
    "name": "@photon/api",
    "type": "module",
    "scripts": {
        "dev": "tsx watch src/index.ts",
        "build": "tsup",
        "start": "node dist/index.js",
        "typecheck": "tsc --noEmit",
        "db:generate": "drizzle-kit generate",
        "db:migrate": "drizzle-kit migrate",
        "db:push": "drizzle-kit push",
        "db:studio": "drizzle-kit studio",
        "db:drop": "drizzle-kit drop",
        "db:check": "drizzle-kit check",
        "auth:migrate": "npx @better-auth/cli@latest generate --config src/lib/auth/index.ts --output src/db/schema/auth.ts",
        "email": "email dev --port 4001 --dir src/lib/email/template"
    },
    "dependencies": {
        "@dotenvx/dotenvx": "^1.49.0",
        "@hono/node-server": "^1.19.1",
        "@hono/standard-validator": "^0.1.5",
        "@react-email/components": "^0.5.2",
        "@react-email/render": "^1.2.2",
        "@scalar/hono-api-reference": "^0.9.16",
        "better-auth": "^1.3.8",
        "drizzle-orm": "^0.44.5",
        "drizzle-seed": "^0.3.1",
        "hono": "^4.9.6",
        "hono-openapi": "^1.0.2",
        "nodemailer": "^7.0.6",
        "pg": "^8.16.3",
        "react": "19.1.1",
        "react-dom": "19.1.1",
        "redis": "^5.8.2",
        "zod": "^4.1.5"
    },
    "devDependencies": {
        "@react-email/preview-server": "^4.2.8",
        "@types/node": "^24.3.1",
        "@types/nodemailer": "^7.0.1",
        "@types/pg": "^8.15.5",
        "@types/react": "^19.1.12",
        "drizzle-kit": "^0.31.4",
        "react-email": "4.2.8",
        "tsup": "^8.5.0",
        "tsx": "^4.20.5",
        "typescript": "^5.9.2"
    },
    "exports": {
        "./auth": {
            "default": "./dist/index.js",
            "types": "./src/lib/auth/index.ts"
        }
    }
}
