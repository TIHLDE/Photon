# Database variables for docker
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=photon_db

# Database variables for API
DATABASE_URL=postgresql://postgres:password@localhost:5432/photon_db

# Turn off to disable automatic DB seeding on server start
SEED_DB=true

# S3-Compatible Storage
# For local development (MinIO):
S3_ENDPOINT=localhost:9000
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin
S3_BUCKET_NAME=photon-files
S3_REGION=us-east-1
S3_USE_SSL=false
S3_FORCE_PATH_STYLE=true

# For production (OpenStack Swift):
# S3_ENDPOINT=object.trd1.stack.it.ntnu.no
# S3_ACCESS_KEY_ID=<your-openstack-application-credential-id>
# S3_SECRET_ACCESS_KEY=<your-openstack-application-credential-secret>
# S3_BUCKET_NAME=photon-files
# S3_REGION=TRD1
# S3_USE_SSL=true
# S3_FORCE_PATH_STYLE=false

# Feide credentials for login
FEIDE_CLIENT_ID=
FEIDE_CLIENT_SECRET=

VIPPS_TEST_MODE=true

# Runs the server in development mode
NODE_ENV=development

# Address to bind prod container to (127.0.0.1 by default)
# BIND_ADDRESS=127.0.0.1