{
    "name": "photon",
    "private": true,
    "type": "module",
    "workspaces": {
        "packages": ["apps/*", "packages/*", "infra/*"],
        "catalog": {
            "drizzle-orm": "^0.44.5",
            "drizzle-seed": "^0.3.1",
            "better-auth": "^1.4.18",
            "typescript": "^5.9.2",
            "zod": "^4.1.5",
            "@types/bun": "^1.3.9",
            "@types/node": "^24.3.1"
        }
    },
    "scripts": {
        "dev": "turbo dev",
        "build": "turbo build",
        "start": "turbo start",
        "test": "turbo test",
        "typecheck": "turbo typecheck",
        "lint": "turbo lint",
        "lint:fix": "turbo lint:fix",
        "format": "biome format --write .",
        "db:push": "turbo db:push",
        "db:generate": "turbo db:generate",
        "db:migrate": "turbo db:migrate",
        "db:studio": "turbo db:studio",
        "email": "turbo email",
        "docker:dev": "turbo dev:up --filter=@photon/docker",
        "docker:dev:down": "turbo dev:down --filter=@photon/docker",
        "docker:fresh": "turbo dev:fresh --filter=@photon/docker",
        "docker:prod": "turbo prod:up --filter=@photon/docker",
        "docker:prod:down": "turbo prod:down --filter=@photon/docker"
    },
    "packageManager": "bun@1.3.9",
    "devDependencies": {
        "@biomejs/biome": "^1.9.4",
        "turbo": "^2.5.0",
        "typescript": "catalog:"
    }
}
