{
    "name": "photon",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "tsx watch src/index.ts",
        "build": "tsup",
        "start": "node dist/index.js",
        "test": "vitest run",
        "test:watch": "vitest",
        "coverage": "vitest run --coverage",
        "typecheck": "tsc --noEmit",
        "lint": "biome check .",
        "lint:fix": "biome check --write --unsafe .",
        "format": "biome format --write .",
        "db:generate": "drizzle-kit generate",
        "db:migrate": "drizzle-kit migrate",
        "db:push": "drizzle-kit push",
        "db:studio": "drizzle-kit studio",
        "db:drop": "drizzle-kit drop",
        "db:check": "drizzle-kit check",
        "auth:migrate": "npx @better-auth/cli@latest generate --config src/lib/auth/index.ts --output src/db/schema/auth.ts --yes",
        "email": "email dev --port 4001 --dir src/lib/email/template",
        "docker:dev": "docker compose -f docker-compose.dev.yml up -d --wait",
        "docker:dev:down": "docker compose -f docker-compose.dev.yml down",
        "docker:prod": "docker compose -f docker-compose.prod.yml up --build --force-recreate -d --wait",
        "docker:prod:down": "docker compose -f docker-compose.prod.yml down",
        "docker:fresh": "docker compose -f docker-compose.dev.yml down -v && docker compose -f docker-compose.dev.yml up -d --wait"
    },
    "dependencies": {
        "@aws-sdk/client-s3": "^3.927.0",
        "@dotenvx/dotenvx": "^1.49.0",
        "@hono/mcp": "^0.1.4",
        "@hono/node-server": "^1.19.1",
        "@hono/standard-validator": "^0.1.5",
        "@react-email/components": "^0.5.2",
        "@react-email/render": "^1.2.2",
        "@scalar/hono-api-reference": "^0.9.16",
        "@socotra/modelcontextprotocol-sdk": "^1.18.0",
        "@vippsmobilepay/sdk": "^2.4.2",
        "better-auth": "^1.3.26",
        "bullmq": "^5.59.0",
        "drizzle-orm": "^0.44.5",
        "drizzle-seed": "^0.3.1",
        "hono": "^4.10.3",
        "hono-openapi": "^1.0.2",
        "node-cron": "^4.2.1",
        "nodemailer": "^7.0.7",
        "pg": "^8.16.3",
        "react": "19.1.1",
        "react-dom": "19.1.1",
        "redis": "^5.8.2",
        "zod": "^4.1.5"
    },
    "devDependencies": {
        "@biomejs/biome": "^1.9.4",
        "@react-email/preview-server": "^4.2.8",
        "@testcontainers/minio": "^11.8.0",
        "@testcontainers/postgresql": "^11.7.0",
        "@testcontainers/redis": "^11.7.0",
        "@types/bull": "^4.10.4",
        "@types/node": "^24.3.1",
        "@types/node-cron": "^3.0.11",
        "@types/nodemailer": "^7.0.1",
        "@types/pg": "^8.15.5",
        "@types/react": "^19.1.12",
        "@vitest/coverage-v8": "^3.2.4",
        "drizzle-kit": "^0.31.4",
        "react-email": "4.2.8",
        "testcontainers": "^11.7.0",
        "tsup": "^8.5.0",
        "tsx": "^4.20.5",
        "typescript": "^5.9.2",
        "vitest": "^3.2.4"
    },
    "packageManager": "pnpm@10.21.0",
    "engines": {
        "node": ">=18"
    },
    "exports": {
        "./auth": "./src/lib/auth/index.ts",
        "./db": "./src/db/index.ts",
        "./ctx": "./src/lib/ctx.ts"
    }
}
