{
    "name": "photon-monorepo",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "pnpm --filter @photon/api dev",
        "build": "pnpm -r build",
        "start": "pnpm --filter @photon/api start",
        "test": "pnpm --filter @photon/api test",
        "test:watch": "pnpm --filter @photon/api test:watch",
        "coverage": "pnpm --filter @photon/api coverage",
        "typecheck": "pnpm -r typecheck",
        "lint": "biome check .",
        "lint:fix": "biome check --write --unsafe .",
        "format": "biome format --write .",
        "db:generate": "pnpm --filter @photon/api db:generate",
        "db:migrate": "pnpm --filter @photon/api db:migrate",
        "db:push": "pnpm --filter @photon/api db:push",
        "db:studio": "pnpm --filter @photon/api db:studio",
        "db:drop": "pnpm --filter @photon/api db:drop",
        "db:check": "pnpm --filter @photon/api db:check",
        "email": "pnpm --filter @photon/api email",
        "docker:dev": "docker compose -f docker-compose.dev.yml up -d --wait",
        "docker:dev:down": "docker compose -f docker-compose.dev.yml down",
        "docker:prod": "docker compose -f docker-compose.prod.yml up --build --force-recreate -d --wait",
        "docker:prod:down": "docker compose -f docker-compose.prod.yml down",
        "docker:fresh": "docker compose -f docker-compose.dev.yml down -v && docker compose -f docker-compose.dev.yml up -d --wait"
    },
    "devDependencies": {
        "@biomejs/biome": "^1.9.4",
        "typescript": "^5.9.2"
    },
    "packageManager": "pnpm@10.21.0",
    "engines": {
        "node": ">=18"
    }
}
